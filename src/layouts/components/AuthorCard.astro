---
import { Image } from "@astrojs/image/components";
import { plainify } from "@/lib/utils/textConverter";
import Social from "./Social.astro";

const { data } = Astro.props;
const { title, image, social, position } = data.data;
---

<div
  class="rounded bg-theme-light p-8 text-center dark:bg-darkmode-theme-light"
>
  {
    image && (
      <Image
        class="mx-auto mb-6 rounded deveco-border"
        src={image}
        alt={title}
        width={120}
        height={120}
      />
    )
  }
  <h4 class="mb-2">
    <a href={`/authors/${data.slug}`}>{title}</a>
  </h4>
  <h6 class="mb-4">{position}</h6>
  <p class="mb-4">
    {/*plainify(data.body?.slice(0, 100))*/}
    {plainify(data.body)}
  </p>
  <Social source={social} className="social-icons" />
</div>
